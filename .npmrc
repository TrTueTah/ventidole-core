# Resolve peer dependency conflicts automatically
legacy-peer-deps=true

# Reduce verbosity during install
loglevel=error

# Network reliability settings
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use official npm registry
registry=https://registry.npmjs.org/

# Cache settings
prefer-offline=false
prefer-online=true
